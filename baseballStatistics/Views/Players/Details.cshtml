@model baseballStatistics.Models.Player

@{
    ViewData["Title"] = "Details";
}

<h2>Player Summary</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JerseyNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th>
                Batting Average
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>
                @Html.DisplayFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayFor(model => model.JerseyNumber)
            </th>
            <th>
                @Html.DisplayFor(model => model.Team.Name)
            </th>
            <th>
                @ViewBag.BattingAverage
                @*@((100 / (75 - 25)).ToDecimal(3))*@

            </th>
        </tr>
    </tbody>
</table>

<h4>Batting Statistics</h4>
<a asp-action="Create" asp-controller="BattingStats"><button type="button" class="btn btn-primary">Add New</button></a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Game Date
            </th>
            <th>
                At Bats
            </th>
            <th>
                Hits
            </th>
            <th>
                Singles
            </th>
            <th>
                Doubles
            </th>
            <th>
                Triples
            </th>
            <th>
                Homeruns
            </th>
            <th>
                RBIs
            </th>
            <th>
                Runs Scored
            </th>
            <th>
                Walks
            </th>
            <th>
                Strikeouts
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BattingStats)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AtBat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Single)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Double)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Triple)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeRun)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RunsBattedIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RunsScored)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Walk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Strikeout)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="BattingStats"><i class="fas fa-edit fa-lg" style="color: #EB6864;" title="Edit"></i></a> |
                    @*<a asp-action="Details" asp-route-id="@item.Id" asp-controller="BattingStats"><i class="fas fa-list fa-lg" style="color: #EB6864;" title="Details"></i></a> |*@
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="BattingStats"><i class="fas fa-trash-alt fa-lg" style="color: #EB6864;" title="Delete"></i></a>
                </td>
            </tr>
        }
    <tr>
        <th>Total</th>
        <th>@Model.BattingStats.Sum(i => i.AtBat)</th>
        <th>@Model.BattingStats.Sum(i => i.Hit)</th>
        <th>@Model.BattingStats.Sum(i => i.Single)</th>
        <th>@Model.BattingStats.Sum(i => i.Double)</th>
        <th>@Model.BattingStats.Sum(i => i.Triple)</th>
        <th>@Model.BattingStats.Sum(i => i.HomeRun)</th>
        <th>@Model.BattingStats.Sum(i => i.RunsBattedIn)</th>
        <th>@Model.BattingStats.Sum(i => i.RunsScored)</th>
        <th>@Model.BattingStats.Sum(i => i.Walk)</th>
        <th>@Model.BattingStats.Sum(i => i.Strikeout)</th>
    </tr>
        </tbody>
</table>


