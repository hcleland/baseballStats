@model IEnumerable<baseballStatistics.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h2>Team List</h2>

@if (User.Identity.IsAuthenticated)
{
<p>
    <button type="button" class="btn btn-primary"><a asp-action="Create">Add New Team</a></button>
</p>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mascot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamAffiliation)
            </th>
            <th>
                Head Coach
                @*@Html.DisplayNameFor(model => model.ApplicationUser.FullName)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mascot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamAffiliation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.FullName)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit fa-lg" style="color: #EB6864;" title="Edit"></i></a> } |
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-list fa-lg" style="color: #EB6864;" title="Details"></i></a> } |
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action = "Delete" asp-route-id = "@item.Id" ><i class="fas fa-trash-alt fa-lg" style="color: #EB6864;" title="Delete"></i></a>
                }
            </td>
</tr>
}
</tbody>
</table>
