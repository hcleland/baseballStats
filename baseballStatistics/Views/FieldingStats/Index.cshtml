@model IEnumerable<baseballStatistics.Models.FieldingStats>

@{
    ViewData["Title"] = "Index";
}

<h2>Fielding Stats Summary</h2>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Error)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Putout)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoublePlay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
                <td>
                    <a asp-action="Details" asp-controller="Players" asp-route-id="@item.Player.Id" style="color:#EB6864">@Html.DisplayFor(modelItem => item.Player.FullName)</a>
</td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Assist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Error)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Putout)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoublePlay)
                </td>
                @*<td>
                @Html.DisplayFor(modelItem => item.Player.ApplicationUserId)
            </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit fa-lg" style="color: #EB6864;" title="Edit"></i></a> |
                    @*<a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-list fa-lg" style="color: #EB6864;" title="Details"></i></a> |*@
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt fa-lg" style="color: #EB6864;" title="Delete"></i></a>
                </td>
        </tr>
        }
                @*<tr>
            <td>Total</td>
            <td>@Model.Sum(i => i.Assist)</td>
            <td>@Model.Sum(i => i.Error)</td>
            <td>@Model.Sum(i => i.Putout)</td>
            <td>@Model.Sum(i => i.DoublePlay)</td>
        </tr>*@
    </tbody>
</table>
<p><a asp-action="Create"><button type="button" class="btn btn-primary">Add New</button></a></p>
